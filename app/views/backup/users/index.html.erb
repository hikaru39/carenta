<%= @page_title = "#{tm User}一覧" %>
<h1><%= @page_title %></h1>

<%= form_tag :users, method: :get, class: "search" do %>
  <%= text_field_tag "q", params[:q] %>
  <%= submit_tag "検索" %>
<% end %>

<% if @users.present? %>
  <table class="list">
    <thead>
      <tr>
        <th><%= tm User, :name %></th>
        <th><%= tm User, :email %></th>
        <th><%= tm User, :administrator_flag %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
          <td><%= user.administrator_flag %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
<% else %>
  <p>#{tm User}情報がありません。</p>
<% end %>
