<%= render "shared/errors", obj: @point %>

<table class="attr">
  <tr>
    <th><%= form.label :user_id %></th>
    <td><%= form.collection_select :user_id, User.all, :id, :full_name %></td>
  </tr>
  <tr>
    <th>前回のポイント履歴</th>
    <td>
      <%= "#{@latest_point.point.to_s(:delimited)}pt(#{@latest_point.difference.to_s(:delimited)}pt) : #{@latest_point.category}" %>
      <%= hidden_field_tag :latest_point_id, @latest_point.id %> 
    </td>
  </tr>
  <tr>
    <th><%= form.label :difference %></th>
    <td><%= form.text_field :difference %></td>
  </tr>
  <tr>
    <th><%= form.label :category %></th>
    <td><%= form.text_field :category %></td>
  </tr>
</table>
