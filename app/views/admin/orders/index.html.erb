<% @page_title = "注文履歴一覧" %>
<h1><%= @page_title %></h1>

<% if @orders.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>id</th>
        <th>商品情報</th>
        <th>購入者</th>
        <th>購入状態</th>
        <th>発注日時</th>
        <th>完了日時</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.id, [:admin, order] %></td>
          <td><%= link_to order.item.name, order.item %></td>
          <td><%= link_to order.user.last_name + order.user.first_name, order.user %></td>
          <td><%= order.status %></td>
          <td><%= order.ordered_at&.strftime("%Y/%m/%d %H:%M") %></td>
          <td><%= order.finished_at&.strftime("%Y/%m/%d %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>注文履歴がありません。</p>
<% end %>

